/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.welcome-view{
float: right;
margin-top: 5px;
margin-right: 10px;
}

.video-view{
  width: 100%;
  height: 150px;
  text-align: center;
}

.startbutton{
  margin-right: 0 auto;
  background-color: red;
  width: 200px;
  height: 40px;
  border-radius: 30px;
  text-align: center;
}

.icon-button-view{
  margin: 0 auto;
  width: 100%;
  height: 30px;
  text-align: center;
  padding: 60px;
}

.icon-button{
  width: 80px;
  height: 60px;
  float: left;
  list-style-type: none;
  text-align: center;
background-color: transparent;
}

.icon-image{
  width: 60px;
  height: 30px; 
  text-align: center;
}