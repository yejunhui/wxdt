/* pages/order/order.wxss */
.welcome-view{
  width: 100%;
  height: 8px;
  float: right;
  margin-top: 5px;
  margin-right: 10px;
  font-size: 15px;
  text-align: right;
  }
.view{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgb(235, 235, 235);
}
.left-view{
  position: fixed;
  top: 100rpx;
  bottom: 0;
  width: 80px;
  height: 100%;
  overflow: scroll;
  padding-top: 20rpx;
}
.left-item-view{
  width: 100%;
  height: 60px;
  text-align: center;
  margin-top: 5px;
}
.left-item-view-item-img{
  width: 30px;
  height: 30px;
  text-align: center;
  margin-top: 1px;
}
.left-item-view-item-text{
  width: 100%;
  height: 15%;
  text-align: center;
  font-size: 10px;
  margin-top: -5px;
}
.right-view{
  float: right;
  width: 85%;
  height: 100%;
  float: left;
  border-radius: 30px;
  overflow-x: hidden;
  overflow-y: scroll;
}
.right-view2{
  position: fixed;
  top: 100rpx;
  bottom: 0;
  left: 80px;
  right: 0;
  overflow: scroll;
  background-color: #FFFFFF;
  padding: 20rpx 16rpx 0;
}
.right-view-item{
  float: left;
  width: 100%;
  height: 120px;
  margin-top: 5px;
  margin-right: 5px;
  border-radius: 6px;
}
.right-view-item-view-name{
  width: 100px;
  height: 20px;
  font-size: 20px;
  margin-top: 5px;
  margin-left: 10px;
}
.right-view-item-view-number{
  width: 100px;
  height: 15px;
  font-size: 8px;
  text-align: left;
  margin-top: 10px;
  margin-left: 5px;
}
.right-view-item-view-price{
  width: 100%;
  height: 20px;
  font-size: 15px;
  color: red;
  margin-top: 5px;
  margin-left: 10px;
}
.right-view-item-view{
  width: 120px;
  height: 20px;
  float: left;
  margin-bottom: 15px;
  margin-top: 25px;
  margin-left: 5px;
}
.right-view-item-view-view{
  width: 15px;
  height: 15px;
  font-size: 15px;
  text-align: center;
  float: left;
}
.view-button-view{
    position:fixed;
    bottom:0;
    width:100%;
    height: 50px;
    left: 0;
    text-align: center;
    white-space: nowrap;
    background-color: rgb(255, 62, 62);
}
.view-button-text{
  font-size: 16px;
  width: 180px;
  float: left;
  margin-left: 0;
  margin-top: 5px;
}
.view-button{
  height: 40px;
  width: 60px;
  float: right;
  margin-top: 5px;
}