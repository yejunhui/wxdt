/* pages/order/order.wxss */
.welcome-view{
  width: 100%;
  float: right;
  margin-top: 5px;
  margin-right: 10px;
  }
.left-view{
  width: 15%;
  height: 100%;
  float: left;
  text-align: center;
  overflow-x: hidden;
  overflow-y: scroll;
}
.left-item-view{
  width: 100%;
  height: 60px;
  text-align: center;
  margin-top: 5px;
}
.left-item-view-item-img{
  width: 100%;
  height: 55%;
  text-align: center;
  margin-top: 0px;
}
.left-item-view-item-text{
  width: 100%;
  height: 15%;
  text-align: center;
  font-size: 10px;
  margin-top: 0px;
}
.right-view{
  float: right;
  width: 85%;
  height: 100%;
  float: left;
  border-radius: 30px;
}
.right-view-item{
  float: left;
  width: 100%;
  height: 120px;
  margin-right: 5px;
  display: inline-block;
  border-radius: 6px;
}
.right-view-item-view-name{
  width: 100px;
  height: 20px;
  font-size: 15px;
  margin-top: 5px;
  margin-left: 10px;
}
.right-view-item-view-price{
  width: 100%;
  height: 20px;
  font-size: 15px;
  color: red;
  margin-top: 15px;
  margin-left: 10px;
}
.right-view-item-view{
  width: 120px;
  height: 20px;
  float: left;
  margin-bottom: 15px;
  margin-top: 40px;
  margin-left: 5px;
}
.right-view-item-view-view{
  width: 15px;
  height: 15px;
  font-size: 10px;
  text-align: center;
  float: left;
}